<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>
				[%d] [%p] [%13F:%L] \t - %msg %n
			</pattern>
		</encoder>
	</appender>
	<appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>/logs/MultiModule.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>/logs/MultiCommon-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
			<timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
				<maxFileSize>300MB</maxFileSize>
			</timeBasedFileNamingAndTriggeringPolicy>
		</rollingPolicy>
		<encoder>
			<pattern>
				[%d] [%p] [%13F:%L] \t - %msg %n
			</pattern>
		</encoder>
	</appender>
	
	<!-- <logger name="org.springframework" level="OFF" additivity="false" /> -->
	<logger name="org.springframework" level="trace">
		<appender-ref ref="STDOUT" />
	</logger>
	<logger name="org.apache" level="OFF" additivity="false" />
	<logger name="httpclient" level="OFF" additivity="false" />
	<!-- <logger name="org.quartz" level="OFF" additivity="false" /> -->
	<logger name="org.quartz" level="trade" additivity="false">
		<appender-ref ref="STDOUT" />
	</logger>
	
	<root level="info">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="FILE" />
	</root>
</configuration>